{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/main",
    "rootDir": "./src/main",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "lib": ["ES2020"],
    "types": ["node", "electron"]
  },
  "include": ["src/main/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
